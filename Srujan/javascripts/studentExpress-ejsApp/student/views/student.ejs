<% include layouts/header.ejs %>

    <div class="page-data">
        <div >
            <button onclick="addUser()" class="page-button">+ add</button>
        </div>
        <div class="data-table">
                <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>schoolName</th>
                    <th>Phone number</th>
                    <th width="120px">Action</th>
                </tr>

                <%if(data.length){
                    for(var i=0;i < data.length;i++){%>
                        <tr>
                              <td><%=(i+1)%></td>
                              <td><%=data[i].name%></td>
                              <td><%=data[i].address%></td>
                              <td><%=data[i].schoolName%></td>
                              <td><%=data[i].phone%></td>  
                              <td>
                                    <a class="a-inside edit" href="../student/edit/<%=data[i].id%>">Edit</a>
                                   
                                    <a class="a-inside delete" href="../student/delete/<%=data[i].id%>">Delete</a>
                                   
                               </td>
                        </tr>  
                    <%}
                    } else{%>
                    <tr>
                        <td colspan="3">No user</td>
                    </tr>
                <%}%>
                </table>
        </div>
    </div>
    <%include layouts/footer.ejs %>