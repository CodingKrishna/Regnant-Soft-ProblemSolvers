<!-- 
    Page shows the elements we can change
 -->
<%include layouts/header.ejs %>
 <div class="page-data">
     <form action="/student/edit/<%=data[0].id%>" method="POST">
        <div class="form-grp">
                <label>Name</label>
                <input type="text" name='name' value="<%=data[0].name%>" >
            </div>
            <div class="form-grp">
                <label>Address</label>
                <input type="text" name='address' value="<%=data[0].address%>">
            </div>
            <div class="form-grp">
                <label>School Name</label>
                <input type="text" name='schoolName' value="<%=data[0].schoolName%>">
            </div>
            <div class="form-grp">
                <label>Phone Number</label>
                <input type="text" name='phone' value="<%=data[0].phone%>">
            </div>
            <div class="form-grp">
                    <input type="submit" value="save" name='submit' >
                    <input type="button" value="cancel" name="cancel" class="cancel" onclick="cancelAdd()">
            </div>
     </form>
 </div>
 <%include layouts/footer.ejs %>