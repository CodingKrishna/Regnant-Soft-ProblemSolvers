<%- include layouts/header.ejs %>
    <button class="add" onclick = "addUser()">+Add</button>
    <table class= "emptable" border="1" cellpadding="7",cellspacing1="7">
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th width="120px">Active</th>
        </tr>
        <%for(let i = 0; i < data.length; i++){%>
            <tr>
                <td><%=i+1%></td>
                <td><%=data[i].name%></td>
                <td><%=data[i].email%></td>
                <td><%=data[i].address%></td>
                <td><%=data[i].phone%></td>
                <td>
                    <a class="edit" href="../employees/edit/<%=data[i].id%>">Edit</a>
                    <a class="delete" href="../employees/delete/<%=data[i].id%>">delete</a>
                </td>
            </tr>
       <% }%>
    </table>
    <%- include layouts/footer.ejs %>
</body>
</html>